<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/col_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/col_lid"
        />

    <TextView
        android:id="@+id/col_lid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lid"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/col_id"
        app:layout_constraintRight_toLeftOf="@+id/col_description"
        />

    <TextView
        android:id="@+id/col_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/col_lid"
        app:layout_constraintRight_toLeftOf="@+id/col_parentId"
        />

    <TextView
        android:id="@+id/col_parentId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="parent_id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/col_description"
        app:layout_constraintRight_toLeftOf="@+id/col_attributes"
        />

    <TextView
        android:id="@+id/col_attributes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="attributes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/col_parentId"
        app:layout_constraintRight_toRightOf="parent"
        />
</android.support.constraint.ConstraintLayout>