<?xml version="1.0" encoding="utf-8"?>
<com.example.gonmator.lalista_draft.presentation.RowView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rowView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:minHeight="48dp"
    android:checkMark="?android:attr/listChoiceIndicatorMultiple"
    android:background="@drawable/list_selector_read"
    android:descendantFocusability="afterDescendants"
    android:elevation="4dp"
    android:gravity="fill_horizontal"
    android:orientation="horizontal"
    tools:context="com.example.gonmator.lalista_draft.presentation.ListaActivity">

    <ImageButton
        android:id="@+id/selectButton"
        android:background="@android:color/transparent"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/select_button_selector"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:fontFamily="roboto-regular"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/selectButton"
        app:layout_constraintRight_toLeftOf="@+id/actionButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_goneMarginStart="44dp"
        app:layout_goneMarginEnd="44dp"
        />

    <EditText
        android:id="@+id/editItem"
        android:background="@android:color/transparent"
        android:scrollHorizontally="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:fontFamily="roboto-regular"
        android:imeOptions="actionDone"
        android:inputType="textCapSentences|textAutoCorrect"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/selectButton"
        app:layout_constraintRight_toLeftOf="@+id/actionButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_goneMarginStart="44dp"
        app:layout_goneMarginEnd="44dp"
        />

    <ImageButton
        android:id="@+id/actionButton"
        android:background="@android:color/transparent"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:clickable="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_forward_white_24dp"
        />

</com.example.gonmator.lalista_draft.presentation.RowView>
